{
  "manifest_version": 3,
  "name": "BookmarkNest",
  "version": "1.0.0",
  "description": "Automatically save and organize your bookmarks in the cloud or locally with this Chrome extension.",
  "permissions": ["downloads", "bookmarks", "storage", "alarms", "identity"],
  "background": {
    "service_worker": "src/background.js"
  },
  "options_ui": {
    "page": "src/options.html"
  },
  "icons": {
    "16": "images/icon-16x16.png",
    "48": "images/icon-32x32.png",
    "128": "images/icon-120x120.png"
  },
  "action": {
    "default_popup": "src/popup.html"
  }
}
